<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ajayj.myapplication.AnimationActivity"
    tools:showIn="@layout/activity_animation">

<ImageView
    android:id="@+id/image1sample"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:src="@drawable/download"
    />

    <Button
        android:id="@+id/animbtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blink"/>
    <Button
        android:id="@+id/animbtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="slide"/>
    <Button
        android:id="@+id/animbtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ClockWise"/>
    <Button
        android:id="@+id/animbtn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fade"/>
    <Button
        android:id="@+id/animbtn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="move"/>
    <Button
        android:id="@+id/animbtn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zoom"/>

</LinearLayout>
