<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ajayj.myapplication.BDateTimeActivity"
    tools:showIn="@layout/activity_bdate_time">





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textSize="35sp"
        android:text="Book A Class"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/dtextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Duration :"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/sdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawableTint="@color/green"
                android:hint="Start date"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/edate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawableTint="@color/green"
                android:hint="End date"
                android:inputType="text"


                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/dtextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timings :"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/stime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@android:drawable/ic_lock_idle_alarm"
                android:drawableTint="@color/green"
                android:hint="Start time"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/etime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@android:drawable/ic_lock_idle_alarm"
                android:drawableTint="@color/green"
                android:hint="End time"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp" />

    <Button
        android:id="@+id/dttm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_icon"
        android:text="Book"
        android:textColor="@color/colorPrimaryDark"/>




</LinearLayout>
