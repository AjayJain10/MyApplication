<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ajayj.myapplication.FragmentsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/fsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Signin"/>

    <Button
        android:id="@+id/fsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Signup"/>
    <Button
        android:id="@+id/frsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R Signin"/>
    <Button
        android:id="@+id/frsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="r Signup"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rsibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signin" />

        <Button
            android:id="@+id/rsubtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signup"
            />


</LinearLayout>
    <Button
        android:id="@+id/freplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="replace by alternatives"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fsignin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Signin 2" />

        <Button
            android:id="@+id/fsignup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Signup 2" />

        <Button
            android:id="@+id/frsignin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSignin 2" />

        <Button
            android:id="@+id/frsignup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rSignup 2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rsibtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signin 1" />

        <Button
            android:id="@+id/rsubtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signup 1"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/rsibtn22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signin 2" />

        <Button
            android:id="@+id/rsubtn22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace by signup 2"/>

        </LinearLayout>



    <FrameLayout
    android:id="@+id/fragmentid"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/red"
        android:text="hai i am fragment layout"/>



</FrameLayout>


</LinearLayout>
    </ScrollView>